{% extends "::base.html.twig" %}
{% block stylesheets %}
    <link type="text/css"
          href="{{ asset('bundles/codecatsfront/bootstrap-3.1.1-dist/css/bootstrap.min.css') }}"
          rel="stylesheet"
    />
    <link type="text/css"
          href="{{ asset('bundles/codecatsfront/bootstrap-3.1.1-dist/css/bootstrap-theme.min.css') }}"
          rel="stylesheet"
    />
    <link type="text/css"
          href="{{ asset('bundles/codecatsfront/css/main.css') }}"
          rel="stylesheet"
    />
{% endblock %}
{% block body %}
<section class="background-azure">
    <header>
        <nav class="navbar navbar-default navbar-fixed-top opacity-light" role="navigation">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">{{ 'Nawigacja' | trans }}</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('code_cats_front_homepage') }}">{{ 'Progress Checker' }}</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav nav-justified nav-tabs">
                        <li {% if app.request.attributes.get('_route') == 'code_cats_front_statistics' %}class="active"{% endif %}>
                            <a href="{{ path('code_cats_front_statistics') }}">{{ 'Statystyki' | trans }} <span class="glyphicon glyphicon-stats"></span></a>
                        </li>
                        <li {% if app.request.attributes.get('_route') == 'code_cats_front_users' %}class="active"{% endif %}>
                            <a href="{{ path('code_cats_front_users') }}">{{ 'Użytkownicy' | trans }} <span class="glyphicon glyphicon-user"></span></a>
                        </li>
                        <li {% if app.request.attributes.get('_route') == 'code_cats_front_technology' %}class="active"{% endif %}>
                            <a href="{{ path('code_cats_front_technology') }}">{{ 'Technologie' | trans }} <span class="glyphicon glyphicon-floppy-disk"></span></a>
                        </li>

                        <li><a href="{{ path('code_cats_panel_homepage') }}">{{ 'Panel' | trans }}</a></li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    </header>
    {% block content %}
        {% block items %}
        {% endblock %}
    {% endblock %}

    <footer class="well well-lg">
        <br>
        <div class="navbar navbar-default" role="navigation">
            <nav class="container">
                <ul class="nav nav-justified nav-tabs">
                    <li {% if app.request.attributes.get('_route') == 'code_cats_front_statistics' %}class="active"{% endif %}>
                        <a href="{{ path('code_cats_front_statistics') }}">{{ 'Statystyki' | trans }}  <span class="glyphicon glyphicon-stats"></span></a>
                    </li>
                    <li {% if app.request.attributes.get('_route') == 'code_cats_front_users' %}class="active"{% endif %}>
                        <a href="{{ path('code_cats_front_users') }}">{{ 'Użytkownicy' | trans }} <span class="glyphicon glyphicon-user"></span></a>
                    </li>
                    <li {% if app.request.attributes.get('_route') == 'code_cats_front_technology' %}class="active"{% endif %}>
                        <a href="{{ path('code_cats_front_technology') }}">{{ 'Technologie' | trans }} <span class="glyphicon glyphicon-floppy-disk"></span></a>
                    </li>
                </ul>
            </nav>
        </div>
        <a class="btn btn-primary center-block" href="{{ path('code_cats_panel_homepage') }}">
            {{ 'Panel' | trans }} <span class="glyphicon glyphicon-star"></span>
        </a>
        <br>
        <div class="text-center margins">Copyright © 2014</div>
    </footer>
</section>
{% endblock %}

{% block javascripts %}
    {% block bootstrap %}
        <script type="text/javascript"
                src="{{ asset('bundles/codecatspanel/js/core/config.js') }}">
        </script>
        <script type="text/javascript"
                src="{{ asset('bundles/codecatspanel/js/core/translate.js') }}">
        </script>
    {% endblock %}
    {% block libs %}
        <script type="text/javascript"
                src="{{ asset('bundles/codecatsfront/jquery/jquery-2.1.1.min.js') }}">
        </script>
        <script type="text/javascript"
                src="{{ asset('bundles/codecatsfront/bootstrap-3.1.1-dist/js/bootstrap.min.js') }}">
        </script>
    {% endblock %}

    {% block app %}
        <script type="text/javascript"
                src="{{ asset('bundles/codecatsfront/js/main.js') }}">
        </script>
    {% endblock %}
{% endblock %}